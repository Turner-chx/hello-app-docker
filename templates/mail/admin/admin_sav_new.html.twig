{% extends 'mail/sav_base.html.twig' %}

{% block overlay %}
    <div class="sub-header">
        <div class="overlay">
            <h1>{{ 'app.mail.sav_recap.name'|trans }}</h1>
        </div>
    </div>
{% endblock overlay %}

{% block container %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <p class="text-center">
                    <span style="font-size: 18px;">{{ 'app.mail.sav_recap.request'|trans({'%client%': sav.customer, '%name%': sav.customer.name}) }}</span>
                </p>
            </div>
            <div class="col-sm-12">
                {% if sav.customer is not null %}
                    <h2 class="bg-title">{{ 'app.mail.sav_recap.customer_infos'|trans() }}</h2>
                    <ul>
                        {% if sav.customer.name is not null %}
                            <li>
                                <p>{{ 'app.entity.Sav.follow_my_sav.customer.name'|trans() }}{{ sav.customer.name }}</p>
                            </li>
                        {% endif %}
                        {% if sav.customer.email is not null %}
                            <li>
                                <p>{{ 'app.entity.Sav.follow_my_sav.customer.email'|trans() }}{{ sav.customer.email }}</p>
                            </li>
                        {% endif %}
                        {% if sav.customer.phoneNumber is not null %}
                            <li>
                                <p>{{ 'app.entity.Sav.follow_my_sav.customer.phone_number'|trans() }}{{ sav.customer.phoneNumber }}</p>
                            </li>
                        {% endif %}
                        {% if sav.customer.name is not null %}
                            <li>
                                <p>
                                    {{ 'app.entity.Sav.follow_my_sav.delivery_address'|trans() }} :<br>
                                    {{ sav.customer.name }}<br>
                                    {% if sav.customer.address is not null%}{{ sav.customer.address }} {% if sav.customer.additionalAddress is not null %} {{ sav.customer.additionalAddress }}{% endif %}<br>{% endif %}
                                    {% if sav.customer.postalCode is not null %}{{ sav.customer.postalCode }}{% if sav.customer.city is not null %} {{ sav.customer.city }}{% endif %}<br>{% endif %}
                                    {% if sav.customer.country is not null %}{{ sav.customer.country|country }}{% endif %}
                                </p>
                            </li>
                        {% endif %}
                    </ul>
                {% endif %}
            </div>
            <div class="col-sm-12">
                <h2 class="bg-title">{{ 'app.mail.sav_recap.sav_infos'|trans() }}</h2>
                <ul>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>{{ 'app.entity.Sav.field.article'|trans }}</th>
                                <th>{{ 'app.entity.Sav.field.natures_setting'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for savArticle in sav.savArticles %}
                                <tr>
                                    <td>
                                        {% if savArticle.article is not null %}
                                            {{ savArticle.article }}
                                        {% else %}
                                            {{ savArticle.unknownArticle }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {{ savArticle.displayNatureSetting|raw }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </ul>
            </div>
            <div class="col-sm-12">
                <p class="text-center">
                    <strong>
                        <span style="font-size: 18px;">{{ 'app.mail.sav_recap.sav_link'|trans() }}</span>
                    </strong>
                </p>
                <p class="text-center">
                    <a href="http://intranet-qualite-web.local/admin/app/sav/{{ sav.id }}/edit?_tab=tab_s5fcf76a6c453e_1475590538_1_sav" target="_blank">http://intranet-qualite-web.local/admin/app/sav/{{ sav.id }}/edit?_tab=tab_s5fcf76a6c453e_1475590538_1_sav</a>
                </p>
            </div>
        </div>
    </div>
{% endblock container %}